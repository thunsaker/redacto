<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="220dp"
    android:background="@color/gray_light"
    android:layout_margin="16dp">
    <ImageView
        android:id="@+id/imageViewRedaction"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:src="@drawable/redacto_placeholder"
        android:contentDescription="@string/redaction"/>
    <TextView
        android:id="@+id/textViewRedactionDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageViewRedaction"
        android:gravity="center_horizontal"
        android:padding="14dp"
        android:background="@color/gray_transparent"
        android:textSize="24sp"
        android:textColor="@color/redacto_green"
        android:text="19-Sep" />
</RelativeLayout>